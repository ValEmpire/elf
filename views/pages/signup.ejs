<div class="container-fluid h-100 bg-light text-dark p-4">
  <div class="row justify-content-center align-items-center">
    <div class="container p-4">
      <div class="row">
        <div class="text-center">
          <h1>Signup to collect your favourite media</h1>
        </div>
      </div>
    </div>
  </div>
  <hr />
  <div class="container p-4">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <form action="">
          <div class="form-group">
            <label for="exampleInputName1" class="form-label">Full Name</label>
            <input
              id="nameFormField"
              type="name"
              class="form-control"
              id="exampleInputName"
              aria-describedby="nameHelp"
            />
            <div id="nameHelp" class="form-text">Please enter your name.</div>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1" class="form-label"
              >Email address</label
            >
            <input
              id="emailFormField"
              type="email"
              class="form-control"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
            />
            <div id="emailHelp" class="form-text">
              We'll never share your email with anyone else.
            </div>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1" class="form-label"
              >Password</label
            >
            <input
              id="passwordFormField"
              type="password"
              class="form-control"
              id="exampleInputPassword1"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputPassword2" class="form-label"
              >Confirm Password</label
            >
            <input
              id="confirmPasswordFormField"
              type="password"
              class="form-control"
              id="exampleInputPassword1"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputPhone1" class="form-label">Phone</label>
            <input
              id="contactPhoneFormField"
              type="phone"
              class="form-control"
              id="exampleInputPhone1"
              aria-describedby="phoneHelp"
            />
            <div id="phoneHelp" class="form-text">
              We'll never share your phone with anyone else.
            </div>
          </div>
          <!-- <label for="basic-url" class="form-label">Your photo URL</label> -->
          <div class="form-group">
            <input
              id="userPhotoURL"
              type="hidden"
              class="form-control"
              id="exampleInputPassword1"
            />
            <input
              id="user-photo-url"
              type="text"
              class="form-control"
              aria-describedby="basic-addon3"
              placeholder="https://example.com/users/"
            />
          </div>
          <div class="form-check">
            <div class="container p-4">
              <div class="row">
                <div class="col">
                  <button
                    id="signupFormSubmit"
                    type="submit"
                    class="btn btn-primary btn-sm float-left"
                  >
                    Submit
                  </button>
                </div>
                <div class="col">
                  <button
                    type="cancel"
                    class="btn btn-secondary btn-sm disabled"
                  >
                    Cancel
                  </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
  $("#signupFormSubmit").click(function () {
    const name = $("#nameFormField").val();
    const email = $("#emailFormField").val();
    const password = $("#passwordFormField").val();
    const confirmPassword = $("#confirmPasswordFormField").val();
    const contact_phone = $("#contactPhoneFormField").val();
    const userPhotoURL = $("#user-photo-url").val();

    $.post(
      "/api/auth/signup",
      {
        name,
        email,
        password,
        contact_phone,
        // userPhotoURL,
      },
      function (data) {
        // redirect to the params
        window.location.replace("/createAd");
      }
    );
  });
</script>
