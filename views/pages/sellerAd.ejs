  <div class="row justify-content-center align-items-center">
    <div class="container p-4">
      <div class="row">
        <div class="text-center">
          <h1>Seller Ad!</h1>
        </div>
      </div>
<hr />
    </div>
  </div>

            <!-- UPLOAD IMAGES -->
<div class="container mt-3 pt-4">
  <fieldset class="form-group">
    <a href="javascript:void(0)" onclick="$('#pro-image').click()"
      >Select Images</a
    >
    <input
      type="file"
      id="pro-image"
      name="pro-image"
      style="display: none"
      class="form-control"
      multiple
      accept="image/png, image/gif, image/jpeg"
    />
  </fieldset>
  <div class="preview-images-zone"></div>
  <div class="mt-3 text-center">
    <button id="uploadImageBtn" class="btn btn-success" disabled>Upload</button>
  </div>
</div>


<div class="container mt-3 pt-4">
  <div class="text-center">
  <h1>Ad Description</h2></div>
  <form action="">
    <div class="mb-3 mt-3">

      <input type="text" class="form-control mt-3" placeholder="Brand Name">
      <input type="text" class="form-control mt-3" placeholder="Screen Size">
      <input type="text" class="form-control mt-3" placeholder="Condition">
      <input type="text" class="form-control mt-3" placeholder="Memory">
      <input type="text" class="form-control mt-3" placeholder="Price">
      <input type="text" class="form-control mt-3" placeholder="Storage Type">
      <input type="text" class="form-control mt-3" placeholder="Storage Size">
      <textarea class="form-control mt-3" rows="5" id="comment" name="text" placeholder="Additional Details"></textarea>
    </div>
    <div class="mt-3 pb-4 mb-4 text-center">
    <button id="uploadImageBtn" class="btn btn-success" disabled>Submit</button>
  </form>
  </div>
</div>
</div>
